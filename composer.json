{
  "name": "alex-patterson-webdev/laminas-doctrine",
  "description": "A Doctrine integration module for Laminas Applications",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4 || >=8.0",
    "alex-patterson-webdev/doctrine-entity-repository": "dev-feature/0.2.0",
    "alex-patterson-webdev/laminas-date-time": "dev-feature/0.2.0",
    "alex-patterson-webdev/laminas-factory": "dev-feature/3.0.0",
    "alex-patterson-webdev/laminas-symfony-console": "dev-feature/0.1.0",
    "doctrine/doctrine-laminas-hydrator" : "^2",
    "doctrine/data-fixtures": "^1.4",
    "doctrine/orm": "^2.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.5",
    "phpstan/phpstan": ">=0.12",
    "friendsofphp/php-cs-fixer": "^2.18"
  },
  "autoload": {
    "psr-4": {
      "Arp\\LaminasDoctrine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\LaminasDoctrine\\": "test/unit/"
    }
  },
  "scripts": {
    "test": [
      "@test:phpcs",
      "@test:phpcbf-dry-run",
      "@test:phpstan",
      "@test:phpunit"
    ],
    "test:dev": [
      "@test:phpcs",
      "@test:phpcbf-dry-run",
      "@test:phpcbf-fix",
      "@test:phpstan-dev",
      "@test:phpunit"
    ],
    "test:phpcs": "php vendor/bin/phpcs --standard=phpcs.xml --colors src/",
    "test:phpcbf-dry-run": "php vendor/bin/php-cs-fixer fix src/ --diff-format=udiff --dry-run --show-progress=dots --using-cache=no --verbose --rules=@PSR12",
    "test:phpcbf-fix": "php vendor/bin/php-cs-fixer fix src/ --diff-format=udiff --show-progress=dots --using-cache=no --verbose --rules=@PSR12",
    "test:phpstan": "php vendor/bin/phpstan analyse src --level=6",
    "test:phpstan-dev": "php vendor/bin/phpstan analyse src --level=8",
    "test:phpunit": [
      "@putenv XDEBUG_MODE=coverage",
      "php vendor/bin/phpunit --coverage-clover=test/coverage/clover.xml"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
